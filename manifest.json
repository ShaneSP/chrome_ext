{
    "manifest_version": 2,
    "name": "Todo-List Ext.",
    "version": "0.1",
    "permissions": ["activeTab","declarativeContent","storage"],
    "options_page": "src/options.html",
    "chrome_url_overrides": {
        "newtab": "src/todo.html"
    },
    "background": {
        "persistent": false,
        "scripts": ["src/background.js"]
    },
    "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "js": ["node_modules/jquery-slim/dist/jquery.slim.js"]
        }
      ],
    "browser_action": {
        "default_icon": "icon.png"
    }
}